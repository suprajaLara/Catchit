<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="31dp"
        android:text="got it"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="416dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_toStartOf="@+id/button"
        android:textColor="#fe34a6"
        android:text="INSTRUCTIONS"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_centerVertical="true"
        android:text='Minion wants to unlock the secret doors.Password to unlock the doors are displayed for 2 seconds, you are supposed to help minion in unlocking the doors as many as possible, within One MINUTE!  Click "GET" to generate code and click "DONE" to open the door.For each correct code 10 doors will be opened.'
        android:textColor="#000000"
        android:textSize="24sp" />
</RelativeLayout>